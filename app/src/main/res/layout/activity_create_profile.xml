<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".profileCreation.CreateProfileActivity"
    android:orientation="vertical"
    android:background="#000"
    android:screenOrientation="portrait">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_profile_prompt_message"
        android:textColor="#b6eaff"
        android:fontFamily="@font/sharetech"
        android:textSize="8pt"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fancy_popup"
        android:layout_margin="10pt"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_name_prompt"
            android:textColor="#b6eaff"
            android:fontFamily="@font/sharetech"
            android:textSize="8pt"
            android:textAlignment="textStart"/>
        <EditText
            android:id="@+id/create_profile_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/create_profile_textbox"
            android:hint="@string/create_profile_real_name"
            android:textColorHint="@color/titleScreenText"
            android:fontFamily="@font/sharetech"
            android:inputType="text"
            android:textSize="10pt"
            android:layout_marginTop="5pt"
            android:layout_marginBottom="30dp"
            android:paddingTop="2pt"
            android:paddingBottom="2pt"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:backgroundTint="#05293a"
            android:textColor="#b6eaff"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_code_name_prompt"
            android:textColor="#b6eaff"
            android:fontFamily="@font/sharetech"
            android:textSize="8pt"
            android:textAlignment="textStart"/>
        <EditText
            android:id="@+id/create_profile_hacker_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/create_profile_textbox"
            android:hint="@string/create_profile_hacker_name"
            android:textColorHint="@color/titleScreenText"
            android:fontFamily="@font/sharetech"
            android:inputType="text"
            android:textSize="10pt"
            android:layout_marginTop="5pt"
            android:paddingTop="2pt"
            android:paddingBottom="2pt"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:backgroundTint="#05293a"
            android:textColor="#b6eaff"/>

        <TextView
            android:id="@+id/create_profile_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/attentionText"
            android:fontFamily="@font/sharetech"
            android:text="@string/create_profile_error_placeholder"
            android:textSize="7pt"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/create_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:fontFamily="@font/sharetech"
            android:text="@string/create_profile_button"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:background="@drawable/start_button"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:textColor="@color/titleScreenText"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>