<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay_console"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_centerInParent="true"
    android:layout_margin="10pt"
    android:orientation="vertical"
    tools:showIn="@layout/activity_gameplay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Game Start"
        android:textAllCaps="true"
        android:fontFamily="@font/sharetech"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#00c9d9"
        android:textSize="35dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/neutral_full_pop_up"
        android:layout_marginTop="8pt"
        android:layout_marginBottom="5pt">

        <TextView
            android:id="@+id/gameplay_console_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/sharetech"
            android:textColor="#fff"
            android:textSize="9pt"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:text="Welcome, agent.\nGo to game zone Valor for your first target."/>
    </LinearLayout>

    <TextView
        android:id="@+id/console_close_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sharetech"
        android:textStyle="italic"
        android:textColor="#666666"
        android:padding="1pt"
        android:textSize="9pt"
        android:text="@string/console_tap_to_close_message"
        android:textAlignment="center"
        android:layout_marginTop="1.5pt"
        android:visibility="gone"/>

</LinearLayout>