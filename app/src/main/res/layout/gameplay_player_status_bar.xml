<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay_player_status_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_gameplay"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textSize="10pt"
                android:textColor="#9fc5e8"
                android:text="@string/player_name_title"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/gameplay_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textSize="10pt"
                android:textColor="#9fc5e8"
                android:text="@string/player_status_bar_name_placeholder"
                android:textStyle="italic"
                android:paddingEnd="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/gameplay_player_leaderboard_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="@string/leaderboard_status_bar_placeholder"
                android:textSize="10pt"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="@string/player_status_info_separator"
                android:textSize="10pt"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/gameplay_player_leaderboard_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="@string/score_status_bar_placeholder"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="@string/player_status_info_separator"
                android:textSize="10pt"
                android:textStyle="italic"
                android:layout_marginEnd="2pt"/>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="9pt"
                    android:layout_height="9pt"
                    android:src="@drawable/beacon_valor"
                    android:contentDescription="Current game zone." />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/target_status_bar_border"
            android:gravity="center"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#e06666"
                android:text="@string/player_target_title"
                android:textSize="10pt"
                android:layout_marginBottom="4pt"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:id="@+id/gameplay_player_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#f4cccc"
                android:text="@string/player_target_placeholder"
                android:textStyle="bold"
                android:textSize="10pt"
                android:layout_marginBottom="4pt"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/time_status_bar_border"
            android:layout_marginTop="12dp"
            android:layout_marginStart="3dp"
            android:layout_width="80dp">
            <TextView
                android:id="@+id/gameplay_time_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:layout_marginEnd="5pt"
                android:gravity="center"
                android:fontFamily="@font/sharetech"
                android:text="@string/time_left_placeholder"
                android:textColor="#9fc5e8"
                android:textSize="10pt"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>