<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameplay_player_status_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:showIn="@layout/activity_gameplay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gameplay_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sharetech"
            android:textSize="10pt"
            android:textColor="#9fc5e8"
            android:text="@string/player_status_bar_name_placeholder"
            android:layout_alignParentStart="true"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/gameplay_player_leaderboard_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="#1"
                android:textSize="10pt"
                android:textStyle="italic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text=" | "
                android:textSize="10pt"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/gameplay_player_leaderboard_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text="240rep"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:textStyle="italic" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sharetech"
                android:textColor="#00a6ee"
                android:text=" | "
                android:textSize="10pt"
                android:textStyle="italic"/>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gameplay_player_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vt323"
            android:textColor="#ead1dc"
            android:text="@string/gameplay_player_target"
            android:textSize="14pt"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="4pt" />

    </RelativeLayout>

    <TextView
        android:id="@+id/gameplay_time_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vt323"
        android:textColor="@color/mainText"
        android:layout_alignParentEnd="true"
        android:text="8:00"
        android:textSize="12pt"/>
</LinearLayout>