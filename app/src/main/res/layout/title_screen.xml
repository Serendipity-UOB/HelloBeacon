<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bristol.hackerhunt.helloworld.MainActivity"
    android:background="@color/titleScreenBackground"
    android:weightSum="1"
    android:gravity="center">

    <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/title_logo" />

    <Button
        android:id="@+id/title_screen_start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:text="@string/title_screen_start_button"
        android:fontFamily="@font/vt323"
        android:background="@android:color/transparent"
        android:textColor="@color/title_screen_start_button"
        android:textSize="10pt"/>

</LinearLayout>